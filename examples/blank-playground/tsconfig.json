{
  "include": ["src/**/*"],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*" // set path `@/*` as alias of `src/*`
      ]
    },
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "lib": ["esnext", "DOM"],
    "types": ["vite/client"]
  }
}
