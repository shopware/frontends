{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*" // set path `@/*` as alias of `src/*`
      ]
    },
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "esnext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "./env.d.ts"
    ]
  }
}