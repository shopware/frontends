{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignore": [
      "dist",
      "node_modules",
      "coverage",
      ".turbo",
      "temp",
      ".nuxt",
      ".vercel",
      "apiSchema*.json",
      "apiTypes*.d.ts"
    ]
  }
}
