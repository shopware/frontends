{
  "name": "shopware-frontends",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/*",
    "examples/*"
  ],
  "scripts": {
    "bump": "changeset version",
    "changeset": "changeset",
    "build": "dotenv -- turbo run build ",
    "generate": "turbo run generate",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,md,vue}\"",
    "version": "changeset version",
    "postversion": "pnpm run versionReadme",
    "versionReadme": "pnpx ts-node scripts/addChangelogBodyToReadmeFile.ts",
    "taze": "taze major -wr"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@microsoft/api-documenter": "^7.21.5",
    "@microsoft/api-extractor": "^7.34.4",
    "@microsoft/tsdoc": "^0.14.2",
    "@types/changelog-parser": "^2.8.1",
    "changelog-parser": "^3.0.1",
    "dotenv-cli": "^7.1.0",
    "globby": "^13.1.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "taze": "^0.9.0",
    "turbo": "^1.8.3",
    "typedoc": "^0.23.27",
    "vercel": "^28.16.15"
  },
  "engines": {
    "node": "^16.x || ^18.x"
  },
  "lint-staged": {
    "*.{ts,tsx,md,mdx,js,jsx,vue}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@7.29.3",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "vite",
        "react-dom"
      ]
    },
    "patchedDependencies": {
      "@changesets/apply-release-plan@6.1.3": "patches/@changesets__apply-release-plan@6.1.3.patch"
    },
    "allowNonAppliedPatches": true
  }
}
