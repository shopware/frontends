  "include": ["src/*.ts", "types/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "outDir": "./temp",
    "paths": {
      "#imports": ["./src"],
      "#shopware": ["./types/api-types.ts"]
    }
  }
}
